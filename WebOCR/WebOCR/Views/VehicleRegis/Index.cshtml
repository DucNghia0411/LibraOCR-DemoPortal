@{
    ViewData["Title"] = "Vehicle Regstration";
}
@model CoreOCR.Model.VehicleRegistrations.VehicleRegistrationSearchInfoVM;
<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="btn-group float-right">
                <ol class="breadcrumb hide-phone p-0 m-0">
                    <li class="breadcrumb-item"><a href="#">Libra</a></li>
                    <li class="breadcrumb-item active">Vehicle Regstration</li>
                </ol>
            </div>
            <h4 class="page-title">Vehicle Registration</h4>
        </div>
    </div>
</div>
<!-- end page title end breadcrumb -->
<div class="row">
    <div class="col-12">
        <div class="card m-b-15">
            <div class="card-body">
                <form id="SearchForm" asp-controller="VehicleRegis" asp-action="Index" method="GET">
                    <div class="form-group row">
                        <div class="col-sm-2">
                            <label for="example-number-input" class="col-form-label">#No: </label>
                            <input class="form-control" type="number" placeholder="No" name="SearchNo">
                        </div>

                        <div class="col-sm-2">
                            <label for="example-text-input" class="col-form-label">ID: </label>
                            <input class="form-control" type="text" placeholder="ID" name="SearchId">
                        </div>

                        <div class="col-sm-2">
                            <label for="example-text-input" class="col-form-label">File Name: </label>
                            <input class="form-control" type="text" placeholder="File Name" name="SearchName">
                        </div>

                        <div class="col-sm-2">
                            <label for="example-text-input" class="col-form-label">From Date: </label>
                            <input class="form-control datepicker" type="date" placeholder="From Date" name="SearchCreateDate">
                        </div>

                        <div class="col-sm-2">
                            <label for="example-text-input" class="col-form-label">To Date: </label>
                            <input class="form-control datepicker" type="date" placeholder="To Date" name="SearchToDate">
                        </div>
                        <div class="col-sm-2 m-t-33">
                            <button type="submit" class="btn btn-primary btn-lg waves-effect waves-light">
                                <i class="fa fa-search"></i> Search
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->


<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">

                <div class="row">
                    <div class="col-sm-6">
                        <h4 class="mt-0 header-title mb-3 mt-2">Recent Values</h4>
                    </div>
                    <div class="col-sm-6">
                        <a asp-controller="VehicleRegis" asp-action="Info" type="button" class="btn btn-primary waves-effect waves-light right">
                            <i class="fa fa-file"></i> New
                        </a>
                        <button type="button" class="btn btn-primary waves-effect waves-light right m-l-r-10" data-toggle="modal" data-target=".bs-example-modal-center"><i class="fa fa-info-circle"></i> Examples</button>

                    </div>
                </div>

                <table id="datatable-buttons" class="table table-striped dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>#No</th>
                            <th>ID</th>
                            <th>File Name</th>
                            <th>Size</th>
                            <th>Created</th>
                            <th>Function</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var vrInfo in Model.VehicleRegistrations)
                        {
                            <tr>
                                <td>@vrInfo.NumberOrder</td>
                                <td>@vrInfo.Id</td>
                                <td>@vrInfo.FileName</td>
                                <td>@vrInfo.ImageSize</td>
                                <td>@string.Format("{0:dd/MM/yyyy}", @vrInfo.CreateDate)</td>
                                <td>
                                    <a href="javascript:;" class="details btn btn-primary waves-effect waves-light"><div><i class="fa fa-eye"></i></div></a>
                                    <a asp-controller=VehicleRegis asp-action="Delete" asp-route-id="@vrInfo.Id" class="btn btn-outline-danger btn-icon"><div><i class="fa fa-trash"></i></div></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<!-- end row -->

<div class="col-sm-6 col-md-3 m-t-30">
    <!--  Modal content for the above example -->
    <div id="partialModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog">
        <div class="modal-dialog  modal-max">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title mt-0">Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>

<div class="col-sm-6 col-md-3 m-t-30">

    <div class="modal fade bs-example-modal-center" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-50">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title mt-0">Examples</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-xl-12">
                        <div class="card m-b-20">
                            <div class="card-body">

                                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner" role="listbox">
                                        <div class="carousel-item active">
                                            <img class="d-block img-fluid mx-auto mh-450" src="~/assets/images/examples/vr/dkx.jpeg" alt="First slide">
                                        </div>
                                        <div class="carousel-item">
                                            <img class="d-block img-fluid mx-auto mh-450" src="~/assets/images/examples/vr/dkx1.jpg" alt="Second slide">
                                        </div>
                                        <div class="carousel-item">
                                            <img class="d-block img-fluid mx-auto mh-450" src="~/assets/images/examples/vr/dkx13.jpg" alt="Third slide">
                                        </div>
                                        <div class="carousel-item">
                                            <img class="d-block img-fluid mx-auto mh-450" src="~/assets/images/examples/vr/dkx2.jpg" alt="Four slide">
                                        </div>
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div> <!-- end col -->
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>

<script type="text/javascript">
    $(function() {
        $("#datatable-buttons .details").click(function() {
            var Id = $(this).closest("tr").find("td").eq(1).html();
            console.log(Id);
            $.ajax({
                type: "POST",
                url: "/VehicleRegis/Details",
                data: { id : Id},

                success: function(response) {
                    $("#partialModal").find(".modal-body").html(response);
                    $("#partialModal").modal('show');
                },
                failure: function(response) {
                    alert(response.responseText);
                },
                error: function(response) {
                    alert(response.responseText);
                }
            });
        });
    });
</script>
